<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-dispo" author="Thomas">
        <createTable tableName="disponibility">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="day" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="open" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="close" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addDefaultValue tableName="disponibility" columnName="id" defaultValueComputed="gen_random_uuid()"/>

        <insert tableName='disponibility'>
            <column name='day' value="Monday"/>
            <column name='open' value="8:00"/>
            <column name='close' value="10:00"/>
        </insert>
    </changeSet>
</databaseChangeLog>