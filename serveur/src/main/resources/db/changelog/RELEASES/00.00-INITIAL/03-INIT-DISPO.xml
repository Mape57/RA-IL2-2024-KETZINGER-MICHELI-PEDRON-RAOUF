<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-dispo" author="Thomas">
        <createTable tableName="disponibility">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="day_week" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="open" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="close" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="disponibility">
            <column name="id" value="d1d1d1d1-d1d1-d1d1-d1d1-d1d1d1d1d1d1"/>
            <column name="day_week" value="Lundi"/>
            <column name="open" value="08:00"/>
            <column name="close" value="20:00"/>
        </insert>


        <insert tableName="disponibility">
            <column name="id" value="d2d2d2d2-d2d2-d2d2-d2d2-d2d2d2d2d2d2"/>
            <column name="day_week" value="Mardi"/>
            <column name="open" value="08:00"/>
            <column name="close" value="20:00"/>

        </insert>

        <insert tableName="disponibility">
            <column name="id" value="d3d3d3d3-d3d3-d3d3-d3d3-d3d3d3d3d3d3"/>
            <column name="day_week" value="Mercredi"/>
            <column name="open" value="08:00"/>
            <column name="close" value="20:00"/>
        </insert>

        <insert tableName="disponibility">
            <column name="id" value="d4d4d4d4-d4d4-d4d4-d4d4-d4d4d4d4d4d4"/>
            <column name="day_week" value="Lundi"/>
            <column name="open" value="08:00"/>
            <column name="close" value="09:00"/>
        </insert>

    </changeSet>
</databaseChangeLog>