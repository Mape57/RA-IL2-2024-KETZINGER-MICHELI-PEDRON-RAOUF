<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="session-time" author="Thomas">
        <createTable tableName="session">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="day" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="start" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="stop" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="id_court" type="UUID">
                <constraints foreignKeyName="fk_court_session" references="court(id)"/>
            </column>
            <column name="id_coach" type="UUID">
                <constraints foreignKeyName="fk_coach_session" references="coach(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>