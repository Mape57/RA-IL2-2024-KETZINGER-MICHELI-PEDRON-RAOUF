<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-court" author="Thomas">
        <createTable tableName="court">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="court">
            <column name="id" value="b1b1b1b1-b1b1-b1b1-b1b1-b1b1b1b1b1b1"/>
            <column name="name" value="Terrain 1"/>
        </insert>

        <insert tableName="court">
            <column name="id" value="b2b2b2b2-b2b2-b2b2-b2b2-b2b2b2b2b2b2"/>
            <column name="name" value="Terrain 2"/>
        </insert>

        <insert tableName="court">
            <column name="id" value="b3b3b3b3-b3b3-b3b3-b3b3-b3b3b3b3b3b3"/>
            <column name="name" value="Terrain 3"/>
        </insert>

    </changeSet>
</databaseChangeLog>