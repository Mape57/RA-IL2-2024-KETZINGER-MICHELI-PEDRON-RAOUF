<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-court" author="Thomas">
        <createTable tableName="court">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addDefaultValue tableName="court" columnName="id" defaultValueComputed="gen_random_uuid()"/>

        <insert tableName='court'>
            <column name='name' value="Terrain 1"/>
        </insert>
    </changeSet>
</databaseChangeLog>